/* pages/movie-detail/movie-detail.wxss */
.movie-detail-container {
  display: flex;
  flex-direction: column;
}

.header-container {
  display: flex;
  flex-direction: column;
}

.header-image {
  width: 100%;
  height: 320rpx;
  filter: blur(20rpx);
}

.movie-description-container {
  height: 320rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.main-title {
  font-size: 38rpx;
  color: white;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-top: 50rpx;
}

.sub-title {
  font-size: 28rpx;
  color: white;
  margin-top: 30rpx;
}

.like-comment-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 30rpx;
}

.highlight-font {
  color: red;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.plain-font {
  color: white;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-image {
  height: 238rpx;
  width: 175rpx;
  position: absolute;
  top:160rpx;
  right: 30rpx;
}

.summary-container {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 80rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.item-header {
  margin-right: 30rpx;
  width: 80rpx;
  color: #999999;
}

.summary-title-container {
  margin-bottom: 40rpx;
}

.summary-title {
  color: #1f3463;
  font-size: 24rpx;
  font-weight: bold;
}

.rate-container {
  margin-top: 6rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: start;
}

.rate-container-text {
  font-size: 20rpx;
  margin-left: 24rpx;
}

.synopsis-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.synopsis-header {
  color: #999999;
  font-weight: bold;
}

.synopsis-body {
  margin-top: 20rpx;
  line-height:40rpx;
  letter-spacing: 1px;
}

.hr {
  margin-top: 40rpx;
  width: 100%;
  height: 1px;
  background-color: #d9d9d9;
}

.casts-info-container {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
}

.casts-info-title {
  color: #999999;
  font-weight: bold;
}

.casts-card-container {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  height: 300rpx;
}

.cast-info-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
}

.cast-img {
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 10rpx;
}
