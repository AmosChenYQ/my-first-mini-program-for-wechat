/* pages/more-movies/more-movies.wxss */
.more-movies-container {
  display: grid;
  grid-auto-flow: row;
  grid-template-columns: repeat(3, 1fr);
  grid-row-gap: 20rpx;
  justify-items: center;
  padding: 20rpx;
}

.loading-bar-container {
  width: 100%;
  height: 200rpx;
  display: grid;
  place-items: center;
}