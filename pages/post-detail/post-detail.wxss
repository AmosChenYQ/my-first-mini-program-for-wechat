/* pages/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-container {
  position: relative;
  height: 460rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.head-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.head-audio {
  width: 102rpx;
  height: 110rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666666;
}

.const-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2rpx;
}

.tool-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 20rpx 20rpx 20rpx;
}

.image-container {
  display: flex;
  flex-direction: row;
  /* border: solid 1px black; */
}

.circle-image:first-of-type {
  margin-right: 20rpx;
}

.horizon {
  height: 2rpx;
  background-color: #e5e5e5;
  flex-grow: 1;
}

.circle-image {
  width: 90rpx;
  height: 90rpx;
}

.detail {
  color: #666666;
  margin: 0 20rpx 20rpx 20rpx;
  line-height: 44rpx;
  letter-spacing: 2rpx;
}


