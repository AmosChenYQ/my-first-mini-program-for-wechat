/* pages/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666666;
}

.const-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2rpx;
}

.image-container {
  border: solid 1px black;
  margin-bottom: 20rpx;
}

.horizon {
  width: 660rpx;
  height: 2rpx;
  background-color: #e5e5e5;
}

.circle-image {
  width: 90rpx;
  height: 90rpx;
}


