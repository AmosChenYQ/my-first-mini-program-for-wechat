/* pages/welcome/welcome.wxss */
.container {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space;
}

.motto {
  color: #666;
  margin-top: 160rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}

.journey-container {
  border: solid 1rpx #405f80;
  border-radius: 10rpx;
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  font-weight: bold;
}

.journey {
  font-size: 22rpx;
  color: #405f80;
  line-height: 80rpx;
}
