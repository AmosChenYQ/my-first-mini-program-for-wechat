/* pages/posts/posts.wxss */

swiper {
  width: 100%;
  height: 460rpx; 
}

swiper swiper-item image {
  width: 100%;
  height: 460rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-top: solid 2rpx #ededed;
  border-bottom: solid 2rpx #ededed;
  padding: 10rpx;
  background-color: #fff;
}

.post-author-date {
  margin: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
  /* vertical-align: middle; */
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image {
  height: 445rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 20rpx 20rpx 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like-image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like-font {
  margin-right: 40rpx;
  font-size: 26rpx;
}